global:
  scrape_interval: 15s # By default, scrape targets every 15 seconds.
  # external systems (federation, remote storage, Alertmanager).
  external_labels:
    monitor: "codelab-monitor"

# A scrape configuration containing exactly one endpoint to scrape:
# Here it's Prometheus itself.
scrape_configs:
  - job_name: "node"
    scrape_interval: 5s
    static_configs:
      - targets: ["node-exporter:9100"]
        labels:
          group: "ansible"

  - job_name: "postgres"
    scrape_interval: 5s
    static_configs:
      - targets: ["postgres-exporter:9187"]
        labels:
          group: "ansible"

  - job_name: grafana
    scrape_interval: 15s
    scrape_timeout: 5s

    static_configs:
      - targets: ["grafana:{{grafana_external_port}}"]

rule_files:
  - ./alert_rules.yml

alerting:
  alertmanagers:
    - static_configs:
        - targets: ["alertmanager:9093"]
